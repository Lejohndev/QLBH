@using MyWebApp.Models.ViewModels
@model CheckoutViewModel

<h4>Giỏ hàng</h4>

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description"></td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        <td class="total">Total</td>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.CartItems.Count > 0)
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <tr id="row-@item.ProductId">
                                <td class="cart_product">
                                    <a><img src="~/media/products/@item.Image" width="90" height="100"></a>
                                </td>

                                <td class="cart_description">
                                    <h4>@item.ProductName</h4>
                                </td>

                                <td class="cart_price">
                                    <p>@item.Price.ToString("#,##0 VNĐ")</p>
                                </td>

                                <td class="cart_quantity">

                                    <!-- decrease -->
                                    <button type="button" class="btn btn-success btn-sm decrease-btn" data-id="@item.ProductId">
                                        -
                                    </button>

                                    <!-- quantity -->
                                    <input id="qty-@item.ProductId" class="cart_quantity_input" type="text"
                                        value="@item.Quantity" readonly size="2" style="width:40px; text-align:center;">

                                    <!-- increase -->
                                    <button type="button" class="btn btn-default btn-sm increase-btn" data-id="@item.ProductId">
                                        +
                                    </button>

                                    <!-- remove -->
                                    <button type="button" class="btn btn-danger btn-sm remove-btn" data-id="@item.ProductId">
                                        Remove
                                    </button>
                                </td>

                                <!-- item total -->
                                <td class="cart_total">
                                    <p id="itemTotal-@item.ProductId" class="cart_total_price">
                                        @((item.Price * item.Quantity).ToString("#,##0 VNĐ"))
                                    </p>
                                </td>

                            </tr>
                        }

                        <!-- GRAND TOTAL -->
                        <tr>
                            <td colspan="4">
                                <h4>
                                    Grand Total:
                                    <span id="grandTotal">@Model.GrandTotal.ToString("#,##0 VNĐ").</span>
                                </h4>
                            </td>

                            <td></td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">
                                <h4>Your Cart is Empty.</h4>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="register-req">
            <p>Please use Register And Checkout to easily get access to your order history, or use Checkout as Guest</p>
        </div><!--/register-req-->
        @if (Model.CartItems.Count > 0)

        {
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-controller="Checkout" asp-action="Checkout" method="post">
                    @Html.AntiForgeryToken()
                    <div class="shopper-informations">
                        <div class="row">

                            <div class="col-sm-6 clearfix">
                                <div class="bill-to">
                                    <p>Bill To</p>
                                    <div class="form-one">
                                        <div class="form-group">
                                            <input asp-for="Address.Email" class="form-control" placeholder="Email *" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Address.FullName" class="form-control" placeholder="Name" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Address.Address1" class="form-control" placeholder="Address 1 *" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Address.Address2" class="form-control" placeholder="Address 2" />
                                        </div>
                                    </div>
                                    <div class="form-two">
                                        <div class="form-group">
                                            <input asp-for="Address.ZipCode" class="form-control"
                                                placeholder="Zip / Postal Code *" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Address.Country" class="form-control" placeholder="Country" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Address.State" class="form-control"
                                                placeholder="State / Province / Region" />
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Address.Phone" class="form-control" placeholder="Phone *" />
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <div class="col-sm-6">
                                <div class="order-message">
                                    <p>Shipping Order</p>
                                    <textarea asp-for="Address.Note" class="form-control"
                                        placeholder="Notes about your order, Special Notes for Delivery" rows="16"></textarea>
                                    <label><input type="checkbox"> Shipping to bill address</label>

                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="text-right" style="margin-top:15px;">
                        <button type="submit" class="btn btn-primary btn-sm">Checkout</button>
                    </div>
                </form>
            }

        }
    </div>
</section>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(function () {

            // lấy anti-forgery token
            var token = $('input[name="__RequestVerificationToken"]').val();

            function call(url, data, callback) {
                $.ajax({
                    url: url,
                    type: "POST",
                    data: data,
                    headers: {
                        "RequestVerificationToken": token
                    },
                    success: function (res) {
                        if (res.success) {
                            callback(res);
                        }
                    }
                });
            }

            // INCREASE
            $(".increase-btn").click(function () {
                var id = $(this).data("id");

                call("/Cart/Increase", { Id: id }, function (res) {
                    $("#qty-" + id).val(res.quantity);
                    $("#itemTotal-" + id).text("$" + res.itemTotal);
                    $("#grandTotal").text("$" + res.grandTotal);
                });
            });

            // DECREASE
            $(".decrease-btn").click(function () {
                var id = $(this).data("id");

                call("/Cart/Decrease", { Id: id }, function (res) {

                    if (res.removed === true) {
                        $("#row-" + id).remove();
                    } else {
                        $("#qty-" + id).val(res.quantity);
                        $("#itemTotal-" + id).text("$" + res.itemTotal);
                    }

                    $("#grandTotal").text("$" + res.grandTotal);
                });
            });

            // REMOVE ITEM
            $(".remove-btn").click(function () {
                var id = $(this).data("id");

                call("/Cart/Remove", { Id: id }, function (res) {
                    $("#row-" + id).remove();
                    $("#grandTotal").text("$" + res.grandTotal);
                });
            });

        });
    </script>
}
