
@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<MyWebApp.Models.ProductModel>
<div class="row">
	<div class="col-sm-3">
		@Html.Partial("_SidebarPartial")
	</div>
	<style>
		.product-image-wrapper {
			height: 500px;
		}
	</style>

	<div class="col-sm-9 padding-right">

		<!-- Recommend Products Section - Chỉ hiển thị khi user đã mua sản phẩm -->
		@{
			var recommendedProducts = ViewBag.RecommendedProducts as IEnumerable<ProductModel>;
			var hasUserPurchased = (bool?)ViewBag.HasUserPurchased ?? false;
		}
		@if (hasUserPurchased && recommendedProducts != null && recommendedProducts.Any())
		{
			<div class="recommended_items">
				<h2 class="title text-center">Recommended Products</h2>
				<div id="recommended-item-carousel" class="carousel-inner" data-ride="carousel">
					<div class="carousel-inner">
						<div class="item active">
							@foreach (var recommendedProduct in recommendedProducts)
							{
								<div class="col-sm-4">
									<div class="product-image-wrapper">
										<div class="single-products">
											<a asp-action="Detail" asp-controller="Product" asp-route-Id="@recommendedProduct.Id">
												<div class="productinfo text-center">
													<img src="~/media/products/@recommendedProduct.Image"
														alt="@recommendedProduct.Name" width="100%" />
													<h2>@recommendedProduct.Price.ToString("#,##0 VNĐ")</h2>
													<p>@recommendedProduct.Name</p>
													<p>Danh mục : @recommendedProduct.Category?.Name</p>
													<p>Thương hiệu : @recommendedProduct.Brand?.Name</p>
													<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@recommendedProduct.Id"><i class="fa fa-shopping-cart"></i>Add to cart</a>
												</div>
											</a>
										</div>
									</div>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		}

		<div class="features_items"><!--features_items-->
			<h2 class="title text-center">Features Items</h2>
			@foreach (var item in Model)
			{
				<div class="col-sm-4">
					<div class="product-image-wrapper">
						<div class="single-products">
							<a asp-action="Detail" asp-controller="Product" asp-route-Id="@item.Id">
								<div class="productinfo text-center">
									<img src="~/media/products/@item.Image" alt="@item.Name" width="100%" />
									<h2>@item.Price.ToString("#,##0 VNĐ")</h2>
									<p>@item.Name</p>
									<p>Danh mục : @item.Category.Name</p>
									<p>Thương hiệu : @item.Brand.Name</p>
									<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to cart</a>
								</div>
							</a>
						</div>
					</div>
				</div>
			}
		</div><!--features_items-->
		<div class="row">
			<div class="col-sm-12 text-center">
				<pager class="pager-container"
					   list="@Model"
					   asp-action="Index"
					   asp-controller="Home" />
			</div>
		</div>
	</div>
	
</div>
